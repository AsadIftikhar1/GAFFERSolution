<% include layouts/header  %>

<div class="row products">
 <% products.forEach(function(p) { %>
<div class="col-md-4">
    <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
      <img class="pimage" src="/product_images/<%= p.id %>/<%= p.images %>" alt="">
    </a>
    <br><br><br><br>
    <h3><%= p.title %></h3>
    <h4>$<%= parseFloat(p.price).toFixed(2) %></h4>
   <!-- PArse Float is used for Showing the Values of Integer in Zeros otherwise it will be Shown in Integer -->
    <a class="vd" href="/products/<%= p.category %>/<%=p.slug %>">View Details</a>
    
</div>
 <% }); %>
</div>
